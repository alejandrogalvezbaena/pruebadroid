<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme in Dark Mode -->
    <style name="Theme.PRUEBADROID" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PRUEBADROID.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PRUEBADROID.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PRUEBADROID.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="NavigationViewStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

    <style name="ButtonStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

    <style name="ConstraintStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:theme">@style/ButtonStyle</item>
    </style>
    <style name="LineViewStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/white</item>
    </style>
</resources>
